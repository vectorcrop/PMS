<div class="login-wrapper d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
                <div class="card shadow p-4">

                    {{!-- <div class="text-center px-4"><img class="login-intro-img" src="img/bg-img/36.png" alt="">
                    </div>
                    --}}
                    <!-- Register Form-->
                    <div class="register-form mt-4 px-4">
                        <h6 class="mb-3 text-center">Log in to continue to MyCMS.</h6>
                        <form action="/signin" method="POST">
                            {{#if signInErr}}
                            <div class="alert alert-danger p-0 " role="alert">
                                <p class="error alert-heading mt-3 ms-3"><i class="bi bi-x-circle align-middle"></i>
                                    {{signInErr}}
                                </p>
                            </div>
                            {{/if}}
                            <div class="form-group">
                                <input class="form-control" type="text" name="Email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" name="Password"
                                    placeholder="Enter Password">
                            </div>
                            <button class="btn btn-primary w-100" type="submit">Sign In</button>
                        </form>
                    </div>
                    <!-- Login Meta-->
                    <div class="login-meta-data text-center"><a class="stretched-link forgot-password d-block mt-3 mb-1"
                            href="#!">Forgot Password?</a>
                        <p class="mb-0">Didn't have an account? <a class="stretched-link" href="/signup">Register
                                Now</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>