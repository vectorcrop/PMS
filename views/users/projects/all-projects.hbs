<div class="add-new-contact-modal modal fade px-0" id="addnewcontact" data-bs-backdrop="static" data-bs-keyboard="false"
    tabindex="-1" aria-labelledby="addnewcontactlabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="modal-title" id="addnewcontactlabel">Add New Project</h6>
                    <button class="btn btn-close p-1 ms-auto me-0" type="button" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <hr style="background-color: white;">

                <form action="/add-pdf" method="POST" enctype="multipart/form-data">
                    <p>Project Details</p>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Project Code | #VCP</span>
                        <input class="form-control" type="text" name="pcode" placeholder="0001" aria-label=""
                            aria-describedby="to">
                    </div>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Project Title</span>
                        <input class="form-control" type="text" name="ptitle" placeholder="" aria-label=""
                            aria-describedby="to">
                    </div>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Project Status</span>
                        <select class="form-select" id="defaultSelect" name="pstatus"
                            aria-label="Default select example">
                            <option value="1" selected>Select Status</option>
                            <option value="Pending">Pending</option>
                            <option value="Progress">Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Cancelled">Cancelled</option>

                        </select>
                    </div>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Project Link</span>
                        <input class="form-control" type="text" name="plink" placeholder="" aria-label=""
                            aria-describedby="to">
                    </div>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Project Github Repository
                            Link</span>
                        <input class="form-control" type="text" name="pglink" placeholder="" aria-label=""
                            aria-describedby="to">
                    </div>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Estimate Cost â‚¹</span>
                        <input class="form-control" type="text" name="pcost" placeholder="" aria-label=""
                            aria-describedby="to">
                    </div>

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="input-group mb-3"><span class="input-group-text" id="to">Estimate Payment
                                    â‚¹</span>
                                <input class="form-control" type="text" name="pcost" placeholder="" aria-label=""
                                    aria-describedby="to">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="input-group mb-3"><span class="input-group-text" id="to">Date</span>
                                <input class="form-control" type="date" name="pcost" placeholder="" aria-label=""
                                    aria-describedby="to">
                            </div>
                        </div>
                    </div>








                    <div class="input-group mb-3"><span class="input-group-text" id="to">Client Name</span>
                        <input class="form-control" type="text" name="title" placeholder="" aria-label="Username"
                            aria-describedby="to">
                    </div>

                    <div class="input-group mb-3"><span class="input-group-text" id="to">Project Category</span>
                        <select class="form-select" id="defaultSelect" name="category"
                            aria-label="Default select example">
                            <option value="1" selected>Select Category</option>
                            <option value="Document">Document</option>
                            <option value="Pdf">Pdf</option>
                        </select>
                    </div>


                    <div class="input-group mb-3"><span class="input-group-text" id="to">Upload</span>
                        <input class="form-control" type="file" placeholder="" name="Document" aria-label=""
                            aria-describedby="to">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="message">Message</label>
                        <textarea class="form-control" id="message" name="note" cols="3" rows="5"
                            placeholder=""></textarea>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
